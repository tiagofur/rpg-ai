{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "./src",
    "composite": true,
    "tsBuildInfoFile": "./dist/tsconfig.tsbuildinfo",
    "paths": {
      "@/*": ["./src/*"],
      "@/types/*": ["./src/types/*"],
      "@/interfaces/*": ["./src/interfaces/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/services/*": ["./src/services/*"],
      "@/repositories/*": ["./src/repositories/*"],
      "@/errors/*": ["./src/errors/*"],
      "@/cache/*": ["./src/cache/*"],
      "@/logging/*": ["./src/logging/*"],
      "@/analytics/*": ["./src/analytics/*"],
      "@/game/*": ["./src/game/*"],
      "@/gateway/*": ["./src/gateway/*"],
      "@/social/*": ["./src/social/*"],
      "@/plugins/*": ["./src/plugins/*"],
      "@/routes/*": ["./src/routes/*"],
      "@rpg-ai/shared": ["../../packages/shared/src"]
    },
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "node_modules"],
  "references": [
    {
      "path": "../../packages/shared"
    }
  ]
}
