{
  "name": "rpg-ai-supreme",
  "version": "1.0.0",
  "description": "El RPG AI más ambicioso y perfecto del universo - digno de los dioses de la programación",
  "main": "dist/api/index.js",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/api/index.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/api/index.js",
    "lint": "eslint src --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --watchAll=false",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json,md}\"",
    "prepare": "husky install",
    "precommit": "lint-staged",
    "docker:build": "docker build -t rpg-ai-supreme .",
    "docker:run": "docker run -p 3000:3000 rpg-ai-supreme",
    "health": "curl http://localhost:3000/health",
    "benchmark": "autocannon -c 100 -d 30 http://localhost:3000/api/health"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "npm run type-check"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "rpg",
    "ai",
    "game",
    "supreme",
    "typescript",
    "microservices",
    "enterprise",
    "perfect-code"
  ],
  "author": "Los Dioses de la Programación",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.0.1",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^2.1.0",
    "@fastify/type-provider-typebox": "^3.5.0",
    "@prisma/client": "^5.6.0",
    "@sinclair/typebox": "^0.31.28",
    "@types/qrcode": "^1.5.6",
    "bcrypt": "^5.1.1",
    "bull": "^4.11.5",
    "dotenv": "^16.3.1",
    "fastify": "^4.24.3",
    "fastify-metrics": "^10.3.0",
    "fastify-plugin": "^4.5.1",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "kafka-node": "^5.0.0",
    "otplib": "^12.0.1",
    "pino": "^8.16.2",
    "pino-pretty": "^10.2.3",
    "qrcode": "^1.5.4",
    "uuid": "^13.0.0",
    "zod": "^3.22.4",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/jest": "^29.5.10",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.9.4",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "autocannon": "^7.14.0",
    "eslint": "^8.54.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-unicorn": "^49.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "prisma": "^5.6.0",
    "ts-jest": "^29.1.1",
    "tsc-alias": "^1.8.8",
    "tsx": "^4.6.0",
    "typescript": "^5.3.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts",
      "!src/**/__tests__/**",
      "!src/**/*.test.{ts,tsx}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 95,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1",
      "^@api/(.*)$": "<rootDir>/src/api/$1",
      "^@core/(.*)$": "<rootDir>/src/core/$1",
      "^@services/(.*)$": "<rootDir>/src/services/$1",
      "^@utils/(.*)$": "<rootDir>/src/utils/$1"
    }
  }
}
