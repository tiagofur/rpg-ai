{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "lib": ["ES2021"],
    "types": ["node"],
    "paths": {
      "@rpg-ai/shared": ["packages/shared/src/index.ts"],
      "@rpg-ai/shared/*": ["packages/shared/src/*"]
    }
  }
}
